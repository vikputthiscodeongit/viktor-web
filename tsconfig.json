{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "exclude": ["dist"]
}
