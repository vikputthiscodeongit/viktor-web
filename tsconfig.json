{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "exclude": ["dist"]
}
